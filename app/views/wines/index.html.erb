<p style="color: green"><%= notice %></p>

<h1>Wines</h1>

<div id="wines">
<table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Score</th>
                <th>Strains</th>
                <th>Tag quantity</th>
                <th>Tags</th>
                <th colspan="3"></th>
            </tr>
        </thead>
    <tbody>
      <% @wines.each do |wine| %>
       
        <tr>
            <td><%= wine.name %></td>
            <td><%= wine.score %></td>
            <td><%= wine.strains.map(&:name).join(',') %></td>
            <td><%= link_to 'Show', wine %></td>
            <td><%= link_to "Editar", edit_wine_path(wine) %></td>
            <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
     </tbody>
    </table>

</div>






        