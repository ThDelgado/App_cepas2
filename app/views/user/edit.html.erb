     <div class="field">
        <%= form.label :user %>
            <%= form.collection_check_boxes(:user_roles,
                                            User.all,  
                                                :id,
                                                :name) do |b| %>
            <%= b.label class:"label-checkbox" do%>
                <%=b.check_box + b.text%>
            <%end%>
        <% end %>
